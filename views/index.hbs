<header>
  <!-- navigation -->
  <nav class="navbar" style="background-color: #fef4ea;">
    <div class="container" >
      <div class="d-flex align-items-center navbar-brand">
        <span style="color: #de7302;"><i class="fa-solid fa-dollar-sign"></i> 家庭記帳本</span>
      </div> 
      <div class="d-flex align-items-center">
        <form action="/logout" method="post">
          <button type="submit" class="btn  card-link nav-text">
            <i class="fa-solid fa-arrow-right-from-bracket"></i> 登出
          </button>
        </form>
      </div>
    </div>
  </nav>

</header>

{{!-- sort dropdown --}}
<div>

</div>

{{!-- records list --}}
<div class="container col d-flex justify-content-center mt-3">
  <div class="col-md-8">
    {{#each records}}
    <div class="card mb-3">
      <div class="card-body row">
        <div class="col col-md- auto d-flex justify-content-center align-items-center">
          <i class="fa-solid fa-utensils fa-2xl"></i>
        </div>
        <div class="col col-md-8">
          <h5>{{ this.name }}</h5>
          <p class="card-text">{{ this.date }}</p>
        </div>
        <div class="col d-flex align-items-center">
          <h5>${{ this.amount }}</h5>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  
</div>
<div class="d-flex justify-content-center mt-3">
  <form action="/records/new" method="get">
    <button class="btn button" type="submit">
       <i class="fa-solid fa-plus"></i> 新增支出
    </button>
  </form>
</div>
